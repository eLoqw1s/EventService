@model Guid

@{
    ViewData["Title"] = "Удаление Новости";
}

<h2>Удаление Новости</h2>

<p>Вы уверены, что хотите удалить новость с ID @Model?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model" />
    <button type="submit" class="btn btn-danger">Удалить</button>
</form>

<a asp-controller="Home" asp-action="GetAll">Отмена</a>